generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id             String    @id @default(auto()) @map("_id") @db.ObjectId
  email          String    @unique
  hashedPassword String?
  emailVerified DateTime?
  name           String?
  address        String?
  image          String?
  role           UserRole? @default(USER)
}

enum UserRole {
  ADMIN
  USER
}
